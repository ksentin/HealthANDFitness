                        android:textSize="30dp"
                        android:text="0" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <!-- Код для второго вложенного LinearLayout -->

                    <ImageView
