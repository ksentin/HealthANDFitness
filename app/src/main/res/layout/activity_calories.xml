<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Calories"
    android:background="@drawable/bg"
    android:fitsSystemWindows="true">


    <androidx.cardview.widget.CardView
    android:id="@+id/ingredient_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/ingredient_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="Сніданок"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:padding="8dp" />

        <Button
            android:id="@+id/add_ingredient_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="+"
            android:textSize="20sp"
            android:padding="8dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ingredient_name_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Назва старви"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:id="@+id/ingredient_calories_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:textSize="18sp"
                android:text="Кількість калорій"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredient_list"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ingredient_name_snack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="Перекус"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/add_ingredient_button_snack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="+"
                    android:textSize="20sp"
                    android:padding="8dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ingredient_name_Title_snack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="Назва старви"
                    android:textStyle="bold"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/ingredient_calories_Title_snack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textSize="18sp"
                    android:text="Кількість калорій"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredient_list_snack"
            android:layout_marginTop="280dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ingredient_name_lunch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="Обід"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/add_ingredient_button_lunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="+"
                    android:textSize="20sp"
                    android:padding="8dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ingredient_name_Title_lunch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="Назва старви"
                    android:textStyle="bold"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/ingredient_calories_Title_lunch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textSize="18sp"
                    android:text="Кількість калорій"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredient_list_lunch"
            android:layout_marginTop="460dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="540dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ingredient_name_snack2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="Перекус"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/add_ingredient_button_snack2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="+"
                    android:textSize="20sp"
                    android:padding="8dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ingredient_name_Title_snack2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="Назва старви"
                    android:textStyle="bold"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/ingredient_calories_Title_snack2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textSize="18sp"
                    android:text="Кількість калорій"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredient_list_snack2"
            android:layout_marginTop="640dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"/>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="730dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ingredient_name_dinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="Вечеря"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/add_ingredient_button_dinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="+"
                    android:textSize="20sp"
                    android:padding="8dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ingredient_name_Title_dinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="Назва старви"
                    android:textStyle="bold"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/ingredient_calories_Title_dinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textSize="18sp"
                    android:text="Кількість калорій"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredient_list_dinner"
            android:layout_marginTop="830dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"/>


    </androidx.cardview.widget.CardView>






</ScrollView>